#!/bin/bash

if [ $# -ne 2 ]; then
    echo "Usage: $0 /local/module/git/repo/ /results/directory/"
    exit 1
fi

module_name="${1##*/}"

docker run --cap-add=SYS_ADMIN --rm -it -v "$1:/source/${module_name}" -v "$2:/results" asamalik/build-module /usr/bin/mbs-manager build_module_locally "file:////source/${module_name}?#master"

